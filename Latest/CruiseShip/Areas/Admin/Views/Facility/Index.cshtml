@model List<Facility>
@{
    ViewData["Title"] = "Facility";
}
<partial name="_Notification" />
<div class="row pt-4 pb-4">
    <div class="col-6">
        <h3 class="text-dark">
            Facilities List
        </h3>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Facility" asp-action="Upsert" class="btn btn-dark"> <i class="bi bi-plus-circle"></i> Create New Facility </a>
    </div>
</div>
<div class="table-responsive bg-primary text-light rounded-4 p-3">
    <table id="tblData" class="table table-bordered table-hover table-secondary table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Fee</th>
                <th>Available Slots</th>
                <th>Created By</th>
                <th>Image</th>
                <th></th>
                
            </tr>
        </thead>
       
    </table>
</div>
@section Scripts{
    <script src="~/js/facility.js"></script>
}