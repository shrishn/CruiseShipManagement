@model List<Room>
@{
    ViewData["Title"] = "Room";
}
<partial name="_Notification" />
<div class="row pt-4 pb-4">
    <div class="col-6">
        <h3 class="text-dark">
            Rooms List
        </h3>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Room" asp-action="Create" class="btn btn-dark"> <i class="bi bi-plus-circle"></i> Create New Room </a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-secondary  table-striped" >
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Type</th>
                <th>Fee</th>
                <th>Available Slots</th>
                <th>Modify</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Type</td>
                    <td>@room.Fee</td>
                    <td>@room.AvailableSlots</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Room" asp-action="Edit" asp-route-id="@room.Id" class="btn btn-dark mx-2">Edit <i class="bi bi-pencil-square"></i> </a>
                            <a asp-controller="Room" asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger mx-2">Delete <i class="bi bi-trash3-fill"></i> </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
