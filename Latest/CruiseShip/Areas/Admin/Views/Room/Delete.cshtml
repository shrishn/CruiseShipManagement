@model CruiseShip.Models.Room

@{
    ViewData["Title"] = "Delete";
}


<div class="border p-3 mt-4 text-dark bg-white " style="border-radius:30px">
    <h3>Are you sure you want to delete this Room?</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSlots)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableSlots)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-6 col-md-3">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Room" asp-action="Index" class="btn btn-outline-dark form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
